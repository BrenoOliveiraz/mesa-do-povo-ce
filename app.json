{
  "expo": {
    "name": "mesa-do-povo-ce",
    "slug": "mesa-do-povo-ce",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "mesadopovoce",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {},
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que o aplicativo use a c√¢mera para tirar fotos de entrega."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
